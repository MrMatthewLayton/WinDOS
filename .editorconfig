# EditorConfig - https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 140

# C/C++ source files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 4
